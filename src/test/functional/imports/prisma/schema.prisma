// This is your Prisma schema file,
// learn more about it in the docs: https://pris.ly/d/prisma-schema

datasource db {
  provider = "postgresql"
  url      = ""
}

generator client {
  provider = "prisma-client-js"
  output   = ".client"
}

generator zod {
  provider       = "zod-prisma"
  output         = "../actual/"
  dateTimeSchema = "transform"
}

enum Status {
  draft
  live
  archived
}

model Document {
  id       String @id @default(cuid())
  filename String @unique
  author   String
  contents String
  status   Status

  created DateTime @default(now())
  updated DateTime @default(now())
}

model Presentation {
  id           String        @id @default(cuid())
  filename     String        @unique
  author       String
  contents     String[]
  spreadsheets Spreadsheet[]

  created DateTime @default(now())
  updated DateTime @default(now())
}

model Spreadsheet {
  id            String         @id @default(cuid())
  filename      String         @unique
  author        String
  contents      Json
  presentations Presentation[]

  created DateTime @default(now())
  updated DateTime @default(now())
}
