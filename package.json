{
  "name": "@gabrola/zod-prisma",
  "version": "0.11.0",
  "description": "A Prisma generator that creates Zod schemas for all of your models",
  "license": "MIT",
  "author": "Carter Grimmeisen",
  "contributors": [
    "AcadArena",
    "Gabrola"
  ],
  "homepage": "https://github.com/Gabrola/zod-prisma#readme",
  "repository": {
    "type": "git",
    "url": "https://github.com/Gabrola/zod-prisma.git"
  },
  "bugs": {
    "url": "https://github.com/Gabrola/zod-prisma/issues"
  },
  "main": "dist/index.js",
  "module": "dist/zod-prisma.esm.js",
  "typings": "dist/index.d.ts",
  "bin": {
    "zod-prisma": "bin/cli.js"
  },
  "keywords": [
    "zod",
    "prisma",
    "generator"
  ],
  "files": [
    "bin",
    "dist"
  ],
  "scripts": {
    "build": "dts build --target node --format cjs --rollupTypes",
    "lint": "tsc --noEmit && dts lint src --ignore-pattern src/test/functional",
    "prepare": "husky install",
    "prepublish": "dts build --target node --format cjs --rollupTypes",
    "start": "dts watch",
    "test": "dts test --maxWorkers=4 --verbose",
    "test:ci": "dts test --maxWorkers=2 --verbose --ci",
    "changeset:version": "changeset version",
    "changeset:publish": "pnpm run build && changeset publish"
  },
  "prettier": {
    "printWidth": 100,
    "singleQuote": true,
    "tabWidth": 2,
    "trailingComma": "es5",
    "semi": true
  },
  "eslintConfig": {
    "parser": "@typescript-eslint/parser",
    "parserOptions": {
      "sourceType": "module",
      "ecmaVersion": 2022
    },
    "rules": {
      "react-hooks/rules-of-hooks": "off"
    }
  },
  "jest": {
    "testEnvironment": "node"
  },
  "dependencies": {
    "@prisma/generator-helper": "4.9.0",
    "parenthesis": "3.1.8",
    "ts-morph": "17.0.1"
  },
  "devDependencies": {
    "@changesets/cli": "^2.26.0",
    "@prisma/client": "4.9.0",
    "@prisma/internals": "4.9.0",
    "@tsconfig/recommended": "1.0.2",
    "@types/fs-extra": "11.0.1",
    "@types/jest": "^29.4.0",
    "@types/node": "^18.11.19",
    "@typescript-eslint/eslint-plugin": "^5.50.0",
    "@typescript-eslint/parser": "^5.50.0",
    "decimal.js": "^10.0.0",
    "dts-cli": "1.6.3",
    "execa": "5.1.1",
    "fast-glob": "3.2.12",
    "fs-extra": "11.1.0",
    "husky": "8.0.3",
    "jest-mock-extended": "3.0.1",
    "prisma": "4.9.0",
    "tslib": "2.5.0",
    "typescript": "4.9.5",
    "zod": "3.22.4"
  },
  "peerDependencies": {
    "decimal.js": "^10.0.0",
    "prisma": "^3.0.0 || ^4.0.0 || ^5.0.0",
    "zod": "^3.0.0"
  },
  "peerDependenciesMeta": {
    "decimal.js": {
      "optional": true
    }
  },
  "engines": {
    "node": ">=14"
  },
  "publishConfig": {
    "access": "public"
  }
}
